[Unit]
Description=Container running Squid

[Container]
Image=ghcr.io/mpreu/squid:5.9
PublishPort=3128:3128
Volume=/etc/squid/squid.conf:/etc/squid/squid.conf
Volume=/etc/squid/direct.conf:/etc/squid/direct.conf
Volume=/etc/squid/proxy.conf:/etc/squid/proxy.conf
Volume=/etc/squid/forwarding.txt:/etc/squid/forwarding.txt
Network=podman

[Service]
Restart=always
# Extend timeout for image pulling.
TimeoutStartSec=120
ExecStartPost=/usr/lib/squid/enable
ExecStopPost=/usr/lib/squid/disable
